<img id="burgerPic" src="./assets/images.jpg" alt="Eat-da-Burger">


<h1>Eat-da-Burger!</h1>

<div id="mainSection">

<div id="leftSide">
<h2>Burgers that are not yet devoured</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
     <li>
	{{burger_name}}

	<button class="change-burger" data-id="{{id}}" data-newBurger="true">
	DEVOUR THIS BURGER!
	</button>

</li>
    {{/unless}}
  {{/each}}
</ul>
</div>

<div id="rightSide">
<h2>Burgers that have been devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>
	{{burger_name}}

</li>
    {{/if}}
  {{/each}}
</ul>
</div>

</div>

<div id="newBurger">

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>