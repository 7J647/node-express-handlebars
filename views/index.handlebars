<h1>Eat-da-Burger!</h1>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

{{!-- <h2>Cats that are sleepy!</h2> --}}

<ul>
  {{#each burger}}
    {{#if devoured}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

